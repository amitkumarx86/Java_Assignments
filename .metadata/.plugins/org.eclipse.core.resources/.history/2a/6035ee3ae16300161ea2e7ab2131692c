package Algorithms;

public class QuickSort {
    public static void main(String[] args)
    {
        QuickSort qsort = new QuickSort();
        int[] array = {5, 4, 7, 2, 1, 9, 3, 6, 10, 8};

        System.out.print("Original  Array : ");
        for(int i=0; i<array.length;i++)
        {
            System.out.print(array[i] + " ");
        }

        int length = array.length;

        qsort.qSort(array, 0, length-1);
        System.out.println();
        System.out.print("Sorted  Array : ");
        for(int i=0; i<array.length;i++)
        {
            System.out.print(array[i] + " ");
        }
    }
    public void qSort(int[] a, int p, int r)
    {
        if(p<r)
        {
            int q = Partition(a, p,r);
            qSort(a, p, q-1);
            qSort(a, q+1, r);
            for(int a1=q+1;a1<r;a1++)
        	System.out.print(a[a1]+" ");
            System.out.println();
        }
     }

     private int Partition(int[] a, int p, int r)
     {
         int x = a[r];
         int i = p-1;
         int temp=0;

         for(int j=p; j<=r-1; j++)
         {
             if(a[j]<=x) // use if(a[j] >=x) for non-increasing order 
             {
                 i++;
                 temp = a[i];
                 a[i] = a[j];
                 a[j] = temp;
             }
         }

         temp = a[i+1];
         a[i+1] = a[r];
         a[r] = temp;
         return (++i);
     }
     public  int PartitionForPivotAtIndexZero(int[] a, int p, int r)
     {
	 System.out.println("func called...");
         int x = a[0];
         int i = r+1;
         System.out.println(" i ="+(i));
         int temp=0;
         for(int j=r; j > 0; j--)
         {
             if(a[j] >= x) // use if(a[j] >=x) for non-increasing order 
             {
                 i--;
                 temp = a[i];
                 a[i] = a[j];
                 a[j] = temp;
                     
             }
             
         }
         
         temp = a[i-1];
         a[i-1] = a[0];
         a[0] = temp;
         for(int a1: a)
             System.out.print(a1+" ");
         System.out.println();
         System.out.println(" i ="+(--i));
         return (i);
     }

}
