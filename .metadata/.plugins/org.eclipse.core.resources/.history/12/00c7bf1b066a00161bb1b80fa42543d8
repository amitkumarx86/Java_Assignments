package Algorithms;

import java.util.Arrays;

public class MajorityNumber {
    public static void main(String[] args) {
	int[] ar= {7,2,3,4,5,7,7,7,6};
	System.out.println(countMajorityNumber(ar));
    }
    public static int countMajorityNumber(int[] ar){
	int count=0;
	int[] A=new int[ar.length];
	int[] B=new int[ar.length];
	Arrays.fill(A, -123);
	Arrays.fill(B, -123);
	int top1=-1,top2=-1;
	for(int i=0;i<ar.length;i++){
	    if(top1 == -1) {
		A[++top1] = ar[i];
	    	continue;}
	    if(top2 == -1){ 
		B[++top2] = ar[i];
	    	continue;
	    	}
	    printArray(A);
	    printArray(B);
	    System.out.println(ar[i]);
	    boolean flag=false;
	    for(int k=0;k<A.length;k++){
		if(A[k] == ar[i]){
		    flag=true;break;
		}
	    }
	    if(flag) A[++top1] = ar[i];
	    boolean flag2=false;
	    for(int k=0;k<B.length;k++){
		if(B[k] == ar[i]){
		    flag2=true;break;
		}
	    }
	    if(flag2) B[++top2] = ar[i];
	    if(!flag && !flag2){
		--top1;--top2;
	    }
	    //printArray(A);
	    //printArray(B);
	    System.out.println(top1+" "+top2);
	    
	}
	System.out.println("A");
	for(int i=0;i<A.length;i++) System.out.println(A[i]);
	System.out.println("B");
	for(int i=0;i<A.length;i++) System.out.println(B[i]);
	
	return count;
    }
    private static void printArray(int[] a) {
	// TODO Auto-generated method stub
	for(int i : a) System.out.print(i+" ");
        System.out.println();
    }
}
