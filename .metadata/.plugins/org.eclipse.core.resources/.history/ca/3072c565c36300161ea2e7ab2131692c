package Algorithms;

import java.util.Scanner;

public class MergeSort {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int n = 5;//in.nextInt();
        int[] ar = {5,4,3,2,1};//new int[n];
        //for(int i=0 ;i<n;i++) ar[i] = in.nextInt();
        MergeSort(ar,0,ar.length);
        for(int a : ar)
            System.out.println(a+" ");
        
        in.close();
}
    public static void MergeSort(int[] ar, int p, int r){
	if(p < r){
	    int q = (int)Math.ceil((p+r)/2);
	    System.out.println("q = "+q);
	    MergeSort(ar,p,q);
	    MergeSort(ar,q+1,r);
	    Merge(ar,p,q,r);
	}
    }
    public static void Merge(int[] ar,int p,int q, int r){
	int n1 = q - p;
	int n2 = r - q;
	int[] L = new int[n1+1];
	int[] R = new int[n2+1];
	for(int i=0;i<n1;i++) L[i] = ar[p+i];
	for(int i=0;i<n2;i++) R[i] = ar[q+i];
	System.out.println("l");
	for(int a : L)
            System.out.print(a+" ");
	System.out.println("R");
	for(int a : R)
            System.out.print(a+" ");
        
	L[n1] = 9999999;
	R[n2] = 9999999;
	int i = 0 , j = 0;
	for(int k = p ; k < r ; k++){
	    if(L[i] <= R[j]){ar[k] = L[i];i++;}
	    else{ ar[k] = R[j]; j++;}
	}
    }
}
