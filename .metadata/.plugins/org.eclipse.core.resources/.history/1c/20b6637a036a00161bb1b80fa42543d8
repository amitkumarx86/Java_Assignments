package Algorithms;

public class MajorityNumber {
    public static void main(String[] args) {
	int[] ar= {1,2,3,4,5,1,1,1,6};
	System.out.println(countMajorityNumber(ar));
    }
    public static int countMajorityNumber(int[] ar){
	int count=0;
	int[] A=new int[ar.length];
	int[] B=new int[ar.length];
	int top1=-1,top2=-1;
	for(int i=0;i<ar.length;i++){
	    if(top1 == -1) A[++top1] = ar[i];
	    if(top2 == -1) B[++top1] = ar[i];
	    
	    boolean flag=false;
	    for(int k=0;k<A.length;k++){
		if(A[k] == ar[i]){
		    flag=true;break;
		}
	    }
	    if(flag) A[++top1] = ar[i];
	    boolean flag2=false;
	    for(int k=0;k<B.length;k++){
		if(B[k] == ar[i]){
		    flag2=true;break;
		}
	    }
	    if(flag2) B[++top2] = ar[i];
	    if(!flag && !flag2){
		--top1;--top2;
	    }
	    printArray(A);
	    printArray(B);
	    
	}
	for(int i=0;i<top1;i++) System.out.println(A[i]);
	System.out.println("B");
	for(int i=0;i<top2;i++) System.out.println(B[i]);
	
	return count;
    }
    private static void printArray(int[] a) {
	// TODO Auto-generated method stub
	for(int i : a) System.err.print(i);
		System.out.println();
    }
}
